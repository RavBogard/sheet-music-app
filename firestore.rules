rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper to check ownership
    function isOwner(resource) {
      return isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // Helper to check if the CURRENT user is an Admin
    function isAdmin() {
      // 1. Check strict UID (Bootstrap)
      // 2. Check Custom Claim
      return request.auth.uid == '93Xn3DbS0bSNb8zmfzLyfOMX1Ai3' 
          || request.auth.token.role == 'admin';
    }

    // Leader: Can Create/Edit Public Setlists
    function isLeader() {
      return isAdmin() || request.auth.token.role == 'leader';
    }

    // Member: Can Read Library
    function isMember() {
      return isLeader() || request.auth.token.role == 'member';
    }

    // USERS Collection
    match /users/{userId} {
      // Secure Rule: Own data OR Admin
      allow read: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      allow write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();

      // Legacy subcollections (if needed)
      match /setlists/{docId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // SETLISTS Collection (The new root collection)
    match /setlists/{setlistId} {
      // 1. READ: Allow if Public OR User is Owner
      allow read: if (resource.data.isPublic == true) || isOwner(resource);

      // 2. CREATE: 
      //    - Members can create private setlists.
      //    - Only Leaders/Admins can create PUBLIC setlists.
      allow create: if isSignedIn() 
                    && request.resource.data.ownerId == request.auth.uid
                    && (request.resource.data.isPublic != true || isLeader());

      // 3. UPDATE: 
      //    - Owner can always update.
      //    - Leaders/Admins can update ANY Public setlist.
      allow update: if isOwner(resource) 
                    || (resource.data.isPublic == true && isLeader());

      // 4. DELETE: Owner OR Admin (Leaders generally shouldn't delete others' lists unless Admin)
      allow delete: if isOwner(resource) || isAdmin();
    }
    
    // PUBLIC SETLISTS (Legacy)
    match /publicSetlists/{docId} {
      allow read: if true;
      allow write: if false; // Read-only archive
    }
  }
}
